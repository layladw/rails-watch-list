<h2><%= @list.name %></h2>

<%= link_to 'Go back to all lists', lists_path %>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.comment %>
    <%= link_to "X",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
